{
	"name": "getheadlines",
	"version": "2.0.0",
	"description": "Automates XML/RSS feed parsing to JSON and exposes data via REST API",
	"main": "./bin/www/index.js",
	"scripts": {
		"start:watch": "NODE_CONFIG_DIR=config/environments NODE_ENV=development nodemon bin/www --exec babel-node",
		"start": "NODE_CONFIG_DIR=config/environments NODE_ENV=development babel-node bin/www",
		"clean": "rm -rf ./dist/",
		"build": "npm run clean && babel src -d dist/ --copy-files",
		"prod": "NODE_CONFIG_DIR=config/environments NODE_ENV=production node bin/www",
		"lint": "eslint src lib bin",
		"test": "NODE_CONFIG_DIR=config/environments NODE_ENV=development mocha --require babel-core/register src/**/**.spec.js --recursive --timeout 5000"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cedevita/getheadlines.git"
	},
	"keywords": [],
	"author": "Mladen Ruzicic <ruzicic@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cedevita/getheadlines/issues"
	},
	"homepage": "https://getheadlines.io",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"chai": "^4.1.2",
		"eslint": "^4.18.2",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.9.0",
		"mocha": "^5.0.4",
		"nodemon": "^1.17.1"
	},
	"dependencies": {
		"ajv": "^6.3.0",
		"babel-polyfill": "^6.26.0",
		"body-parser": "^1.18.2",
		"compression": "^1.7.2",
		"config": "^1.30.0",
		"cron": "^1.3.0",
		"express": "^4.16.2",
		"helmet": "^3.12.0",
		"node-readability": "^3.0.0",
		"pg": "^7.4.1",
		"pg-hstore": "^2.3.2",
		"pg-pool": "^2.0.3",
		"rss-parser": "^3.1.2",
		"sanitize-html": "^1.18.2",
		"scrape-it": "^5.0.2",
		"winston": "^2.4.0"
	}
}
